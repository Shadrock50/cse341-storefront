<%- include('includes/head.ejs') %>

<h1>Books Available: </h1>

<% if (books.length > 0) { %> 
    <ul>
        <% books.forEach((book) => { %>
             <li>
                <p>Title: <%= book.name%></p>
                <p>Description: <%= book.bookDesc%></p>
                <p>Price: $<%= book.price%></p>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <h1>No Products Found!</h1>

<% } %> 

<%- include('includes/end.ejs') %>